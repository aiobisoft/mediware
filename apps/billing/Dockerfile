# Build the docker image with `npx nx docker-build billing`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t billing`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system billing && \
          adduser --system -G billing billing

COPY dist/apps/billing billing
RUN chown -R billing:billing .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix billing --omit=dev -f install

CMD [ "node", "billing" ]
