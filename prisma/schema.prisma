// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id            Int       @id @default(autoincrement())
  emails        String
  name          String
  city          String
  telephones    String
  addressLine1  String
  addressLine2  String?
  whatsapps     String?
  NTN           String?
  STN           String?
  licenseNumber String?
  TNNumber      String?
  TRNNumber     String?
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @default(now())
  deletedAt     DateTime? @default(dbgenerated("NULL"))
  Invoice       Invoice[]
}

model Medicine {
  id              Int               @id @default(autoincrement())
  name            String
  formula         String?
  brand           String?
  type            String?
  InvoiceMedicine InvoiceMedicine[]
  createdAt       DateTime?         @default(now())
  updatedAt       DateTime?         @default(now())
  deletedAt       DateTime?         @default(dbgenerated("NULL"))
}

model Invoice {
  id              Int               @id @default(autoincrement())
  invoiceNumber   String
  invoiceDate     DateTime          @default(now())
  total           Float
  salesTax        Float             @default(0.0)
  deliveredBy     String?
  bookingDriver   String?
  status          String?
  supplierId      Int
  Supplier        Supplier          @relation(fields: [supplierId], references: [id])
  InvoiceMedicine InvoiceMedicine[]
  createdAt       DateTime?         @default(now())
  updatedAt       DateTime?         @default(now())
  deletedAt       DateTime?         @default(dbgenerated("NULL"))
}

model InvoiceMedicine {
  id                 Int       @id @default(autoincrement())
  batchIdentifier    String
  packing            String
  expirey            DateTime
  unitTakePrice      Float
  unitSalePrice      Float
  discountPercentage Float     @default(0.0)
  discountedAmount   Float     @default(0.0)
  advTax             Float     @default(0.0)
  quantity           Int
  medicineId         Int
  Medicine           Medicine  @relation(fields: [medicineId], references: [id])
  invoiceId          Int
  Invoice            Invoice   @relation(fields: [invoiceId], references: [id])
  netAmount          Float
  createdAt          DateTime? @default(now())
  updatedAt          DateTime? @default(now())
  deletedAt          DateTime? @default(dbgenerated("NULL"))
}
